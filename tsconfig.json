{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./types",
    /* Linting */
    "strict": true
  },
  "include": ["lib", "examples"],
  "exclude": ["node_modules", "dist"]
}
