{
  "name": "@ak110/html-escaper",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "version": "0.1.0",
  "description": "HTML文字列をエスケープするライブラリ",
  "license": "MIT",
  "author": "aki. <mark@aur.ll.to>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ak110/html-escaper.git"
  },
  "keywords": [
    "html",
    "escape",
    "escaper",
    "sanitize",
    "sanitizer",
    "security"
  ],
  "bugs": {
    "url": "https://github.com/ak110/html-escaper/issues"
  },
  "homepage": "https://github.com/ak110/html-escaper",
  "type": "module",
  "files": [
    "dist",
    "index.d.ts"
  ],
  "main": "./dist/html-escaper.cjs",
  "module": "./dist/html-escaper.mjs",
  "types": "./index.d.ts",
  "exports": {
    "types": "./index.d.ts",
    "import": "./dist/html-escaper.mjs",
    "require": "./dist/html-escaper.cjs"
  },
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist && tsc && vite build && terser dist/html-escaper.mjs -o dist/html-escaper.min.mjs --source-map \"content=dist/html-escaper.mjs.map,url=html-escaper.min.js.map\" --compress --mangle",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "format": "xo --fix && prettier --write ."
  },
  "devDependencies": {
    "@types/jest": ">=29.5.14",
    "jest": ">=29.7.0",
    "jest-environment-jsdom": ">=29.7.0",
    "prettier": ">=3.5.2",
    "terser": ">=5.39.0",
    "ts-jest": ">=29.2.5",
    "typescript": ">=5.7.3",
    "vite": ">=6.1.1",
    "xo": ">=0.60.0"
  },
  "xo": {
    "prettier": true,
    "space": 2,
    "semicolon": false,
    "ignores": [
      "dist/**"
    ],
    "rules": {
      "@stylistic/quotes": "off",
      "max-depth": [
        "error",
        8
      ],
      "@typescript-eslint/naming-convention": "off",
      "@typescript-eslint/triple-slash-reference": "off"
    }
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "singleQuote": false,
    "bracketSpacing": true,
    "printWidth": 127
  },
  "packageManager": "pnpm@9.15.4+sha512.b2dc20e2fc72b3e18848459b37359a32064663e5627a51e4c74b2c29dd8e8e0491483c3abb40789cfd578bf362fb6ba8261b05f0387d76792ed6e23ea3b1b6a0"
}
